{
  "manifest_version": 3,
  "name": "I've Read the DDB ToS",
  "description": "Yes, I'm aware that the ToS was updated 'recently' for DNDBeyond, thank you, now go away.",
  "version": "1.0",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "js": ["HideTheDdbTosBar.js"],
      "matches": [
        "https://www.dndbeyond.com/characters/*"
      ]
    }
  ]
}
